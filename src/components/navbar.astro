---
const pages = [
  { name: "home", path: "/" },
  { name: "about", path: "/about" },
  { name: "now", path: "/now" },
  { name: "books", path: "/books" },
];

const current = Astro.url.pathname;
---

<nav>
  <ul>
    {pages.map(page => (
      <li aria-current={current === page.path ? "page" : undefined}>
        <a href={page.path}>{page.name}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  nav {
    font-family: var(--mono);
    font-weight: normal;
  }

  ul {
    display: inline-flex;
    gap: 1em;
    list-style: none;

    margin: 0;
    padding: 0;
  }

  li {
    &:hover {
      font-weight: bold;
    }
  }

  li[aria-current] a {
    --detail: var(--accent);

    color: var(--detail);
  }
</style>
