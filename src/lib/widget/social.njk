<ul class="social">
  {% for key, val in social %}
    <li>
      <a class="plain" target="_blank" href="{{ val.link }}" style="color: {{ val.tint }};">
        <svg viewBox="0 0 16 16" width="18" height="18" fill="currentColor">
          <use href="#{{ val.icon }}"></use>
        </svg>
      </a>
    </li>
  {% endfor %}
</ul>

<style>
  ul.social {
    display: inline-flex;
    gap: 8px;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  ul.social a {
    display: inline-flex;
    box-sizing: content-box;
    aspect-ratio: 1;
    border-radius: 4px;
    padding: 2px;
    transition: color .2s, background .2s, transform .2s;

    svg {
      place-self: center;
    }

    &:hover {
      background: currentColor;
      transform: scale(1.2) rotateX(10deg) rotateY(5deg) rotate(5deg);

      svg {
        color: var(--backgd);
      }
    }
  }
</style>
